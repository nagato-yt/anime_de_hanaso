                <div class=" mt-5 d-flex flex-warp flex-column justify-content-center">
                    <div class="scroll">
                        <%= render 'layouts/post_card', post: @post %>
                    </div>
                </div>
        </div>
        <div class="col-sm-12 col-md-8 col-lg-4 px-5 px-sm-0 mx-auto mt-5">
            <h2 class="text-center mt-5">チャットルーム</h2>
