<% users.each do |user| %>
    <div class="card mt-3">
      <div class="bd-placeholder-img card-img-top"><%= image_tag user.get_profile_image, size:'150x150',class: "rounded mx-auto d-block" %></div>
        <div class="card-body">
          <h5 class="card-title"><%= user.name %></h5>
          <p class="card-text"><%= user.introduction %></p>
          <p>
            <table>
              <tr>
                  <th>フォロー</th>
                  <th class="follow-<%= user.id %>"><%= render 'public/relationships/following_count', user: user %></th>
              </tr>
              <tr>
                <th>フォロワー</th>
                <th class="follow-<%= user.id %>"><%= render 'public/relationships/follower_count', user: user %></th>
              </tr>
            </table>
          </p>
          <p class="follow-btn-<%= user.id %>"><%= render 'public/relationships/btn', user: user %></p>
        </div>
        <div class="card-footer">
          <div class="text-muted"><%= link_to 'もっと詳しく', public_user_path(user), class: "btn btn-outline-info btn-sm" %></div>
        </div>
    </div>
<% end %>