<div class="container">
    <h2 class="text-center mt-5">みんなの投稿</h2>
    <div class="row mt-5">
        <div class="col-lg-2 px-5 px-sm-0 mx-auto mt-5">
            <div class="sidebar_fixed">
                <div class="sidebar_fixed mb-5">
                    <%= render 'public/posts/title_search' %>
                </div>
            </div>
            <div class="sidebar_fixed">
                <!--投稿フォーム-->
                <div class="post-form">
                    <h5 class="text-center">新規投稿</h5>
                    <%= render 'public/posts/post_form', post: @post %>
                </div>
            </div>
        </div>
        <!--一覧-->
        <div class="col-sm-12 col-md-8 col-lg-7 px-5 px-sm-0 mx-auto">
            <div>
                <%= render 'public/posts/post_index', posts: @q_posts %>
            </div>
            <div class="col align-self-end" onselectstart="return false;" onmousedown="return false;">
                <div class="text-center">
                    <%= image_tag 'chuui' %>
                </div>
            </div>
        </div> 
        <div class="col-lg-2 px-5 px-sm-0 mx-auto">
            <div class="tag_search sidebar_fixed">
                <%= render 'public/posts/tag_search' %>
            </div>
        </div>
    </div>
</div>
