<div class="row justify-content-center">
    <div class="col">
        <%= form_with model: @group, url: public_group_path, method: :patch do |f| %>
        <div class="col">
            <%= f.label :name, 'グループ名' %></br>
            <%= f.text_field :name, class: "control-form" %>
        </div>
        <div class="col">
            <%= f.label :introduction, 'グループ紹介' %></br>
            <%= f.text_area :introduction, class: "control-form" %>
        </div>
        <div class="form-group">
            <%= f.label :profile_image, 'グループ画像' %>
            <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="col">
            <%= f.submit '編集OK', class: "btn btn-outline-success" %>
        </div>
        <% end %>
    </div>
</div>
