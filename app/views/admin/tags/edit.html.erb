
<div class="container">
    <h2 class="text-center mt-5">タグ名編集</h2>
    <div class="row justify-content-center">
        <div class="col-sm col-md col-lg-5">
            <%= form_with model: @tag, url: admin_tag_path, local: true, method: :patch do |f| %>
            <div class="form-group">
                <%= f.label :name, 'タグ名' %></br>
               <%= f.text_field :name, class: 'form-control' %>
            </div>
               
               <div class="form-group">
                   <%= f.submit '保存', class: "btn btn-success btn-lg" %>
               </div>
               
            <% end %>
        </div>
    </div>
</div>