<div class="container">
    <div class="row justify-content-center">
        <h2 class="text-center">タグ一覧</h2>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm col-md col-lg-5">
            <%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
                <div class="form-group">
                  <%= f.label :name, 'タグ名' %>
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.submit '作成', class: 'btn btn-success btn-sm' %>
                </div>
            <% end %>
        </div>
    </div>
    <div class="col-sm col-md col-lg-5 align-items-center">
        <table class= "table">
            <thead>
                <th>タグネーム</th>
            </thead>
            <tbody>
                <% @tags.each do |tag| %>
                <tr>
                    <td><%= tag.name %></td>
                    <td><%= link_to '編集', edit_admin_tag_path(tag) %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>