<% @posts.each do |post| %>
  <div class="card w-100 mt-3" style="width: 18rem;" href='/public/posts/:id'>
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= post.user.name %></h6>
      <p class="card-text"><%= post.body %></p>
      <a>
        <%= link_to  public_post_path(post) do %>
          <i class="fas fa-comments"></i> 見る
        <% end %>
      </a>
      <div style="display: inline-block">
        <div class=<%="favorite-" + post.id.to_s  %>><%= render "public/favorites/btn", post: post %></div>
      </div>
      
      <p style="text-align: right"><%= post.created_at.to_s(:datetime_jp) %></p>
    </div>
  </div>
<% end %>