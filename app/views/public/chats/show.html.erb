<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto mt-5">
      <h1 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>" class="mt-3">
        <%= @user.name %> さんとのチャット</h1>
        <div class="message scroll" style="width: 400px;">
          <% @chats.each do |chat| %>
            <% if chat.user_id == current_user.id %>
            <div class="mycomment">
              <p><%= chat.message %></p>
            </div>
            <% else %>
            <div class="hukidashi">
              <div class="faceicon">
                <div>
                  <%= image_tag @user.get_profile_image, size:'50x50' %>
                </div>
                <div class="chatting">
                  <div class="says">
                    <p style="text-align: left;"><%= chat.message %></p>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
        </div>
        
        <div class="errors">
          <!--<= render "layouts/errors", obj: @chat %>-->
        </div>
        <div class="send-form">
          <%= form_with model: @chat,url: public_chats_path, data: {remote: true} do |f| %>
            <%= f.text_field :message %>
            <%= f.hidden_field :room_id %>
            <%= f.submit '送信' %>
          <% end %>
        </div>
        
    </div>
  </div>
</div>