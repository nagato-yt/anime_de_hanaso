<h1>Admin::Posts#index</h1>
<div class="container">
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <th>title</th>
                    <th>body</th>
                    <th class="colaps"></th>
                </thead>
                <tbody>
                    <% @posts.each do |post| %>
                    <tr>
                        <td><%= post.title %></td>
                        <td><%= post.body %></td>
                        <td><%= link_to '詳細', admin_post_path(post) %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
