<div class="container">
    <div class="row justify-content-center">
        <div class="col">
            <% groups.each do |group| %>
                <div class="card mt-3" style="width: 100%;">
                  <img class="bd-placeholder-img card-img-top"><div onselectstart="return false;" onmousedown="return false;"><%= image_tag group.get_profile_image, width: '150px', height: '150px' %></div></img>
                  <div class="card-body">
                    <h5 class="card-title"><%= group.name %></h5>
                    <p class="card-text"><%= group.introduction %></p>
                    <%= link_to '見てみる', admin_group_path(group), class: "btn btn-outline-info btn-sm" %>
                  </div>
                </div>
                <% end %>
        </div>
    </div>
</div>