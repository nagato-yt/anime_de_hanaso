<% if current_user != user %>
  <% if user!= User.guest %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", public_user_relationships_path(user.id), method: :delete, class: "btn btn-outline-info" %>
    <% else %>
      <%= link_to "フォローする", public_user_relationships_path(user.id), method: :post, class: "btn btn-outline-success" %>
    <% end %>
  <% end %>
<% end %>