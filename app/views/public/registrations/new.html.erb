<div class="container">
  <h2 class="text-center mt-5">ユーザー新規登録</h2>
    <div class="row mt-5 justify-content-center">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          
          <div class="form-group">
            <%= f.label :name,'ニックネーム' %><br />
            <%= f.text_field :name, autofocus: true,autocomplete: "name", class: "form-control" %>
          </div>
        
        
          <div class="form-group">
            <%= f.label :email, 'メールアドレス' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        
          <div class="form-group">
            <%= f.label :password,'新しいパスワード' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上のパスワード)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        
          <div class="form-group">
            <%= f.label :password_confirmation,'確認用パスワード' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        
          <div class="form-group">
            <%= f.submit "登録する",class: "btn btn-outline-success form-control" %>
          </div>
        <% end %>
        
        <%= render "public/shared/links" %>

      </div>
    </div>
</div>



