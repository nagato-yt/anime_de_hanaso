<h1>Public::GroupMessages#index</h1>
<div class="container">
    <div class="row">
        <div class="chat-messages">
            <div class="chat-messages__chat-group-back">
                <%= link_to '戻る', public_group_path(@group), class: "btn btn-lg btn-outline-secondary" %>
            </div>
            
            <div class="chat-messages__convertions">
                <% @messages.each do |message| %>
                        <p><%= message.created_at.strftime("%Y年%m月%d日") %>
                        <%= message.message %></p>
                <% end %>
            </div>
        </div>
    </div>
    <div class="row">
        <%= form_with model: @message, url: public_group_group_messages_path(@group),method: :post do |f| %>
            <%= f.label :message, '呟く' %></br>
            <%= f.text_field :message, class: "control-form" %></br>
            <%= f.hidden_field :group_id, :value => @group.id %>
            <%= f.submit '送信', class: "btn btn-outline-success btn-sm" %>
        <% end %>
    </div>
</div>
