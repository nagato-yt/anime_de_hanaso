<h1>tag edit</h1>
<div class="container">
    <div class="row">
        <div class="col">
            <%= form_with model: @tag, url: admin_tag_path, local: true, method: :patch do |f| %>
               <%= f.label :name, 'タグ名' %>
               <%= f.text_field :name, class: 'form-control' %>
               <%= f.submit '保存', class: "btn btn-success btn-sm" %>
            <% end %>
        </div>
    </div>
</div>