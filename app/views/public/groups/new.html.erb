<h1>Public::Groups#new</h1>
    <div class="row">
        <div class="col">
            <%= form_with model: @group, url: public_groups_path, method: :post do |f| %>
            <div class="col">
                <%= f.label :name, 'グループ名' %></br>
                <%= f.text_field :name, class: "control-form" %>
            </div>
            <div class="col">
                <%= f.label :introduction, '紹介文' %></br>
                <%= f.text_area :introduction, class: "control-form" %>
            </div>
            <div class="col">
                <%= f.submit 'グループ作成', class: "btn btn-outline-success" %>
            </div>
            <% end %>
        </div>
    </div>
