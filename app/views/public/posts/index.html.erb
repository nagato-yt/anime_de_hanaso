<h1>Public::Posts#index</h1>
<div class="container">
    <div class="row">
        <div class="col-3">
            <%= form_with model: @post,url:public_posts_path,method: :post, local:true do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control" %>
            </div>
             <div class="form-group">
                <%= f.label :body %>
                <%= f.text_field :body, class: "form-control" %>
            </div>
            <div class="form-group">
                <table class= "table">
                    <%= f.collection_check_boxes(:tag_ids,Tag.all, :id, :name) do |tag| %>
                    <tr>
                        <td><%= tag.check_box class: 'form-check-input' %></td>
                        <td><%= tag.text %></td>
                    </tr>
                    <% end %>
                </table>
                
            </div>
            <div class="form-group">
                <%= f.submit '作成する', class: 'btn btn-success' %> 
            </div>
            
            <%end%>
            <table class= "table">
                <% @posts.each do |post| %>
                <tr>
                    <td><%= post.title %></td>
                    <td><%= post.body %></td>
                    <td><%= link_to '詳細へ',public_post_path(post) %></td>
                </tr>
                <%end%>
            </table>
        </div>
        <!--タグ検索-->
            <div class="col"> 
                <%= form_tag({controller:"posts",action:"index"}, method: :get) do %>
                    <% Tag.all.each do |t| %>
                        <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
                    <% end %>
                    <%= submit_tag '検索' %>
                <% end %>
            </div>
            
          <div>
              <%= link_to 'マイページへ', public_user_path(current_user), class: "btn btn-info" %>
          </div>
          <div>
            <%= link_to 'ユーザー一覧へ', public_users_path, class: "btn btn-dark" %>
          </div>
          <div>
              <%= link_to 'トップページへ', root_path %>
          </div>
          
            

        
    </div>
</div>
