<div class="container">
    <div class="row">
        <div class="col">
            <div id="admin-user-scroll">
                <% @users.each do |user| %>
                    <div class="card bg-transparent mt-3">
                      <h5 class="card-header"><%= user.name %></h5>
                      <div class="card-body">
                        <p class="card-text"><%= user.email %></p>
                        <p class="card-text"><%= user.introduction %></p>
                        <p class="card-text"><%= user.created_at %></p>
                       <div class="row justify-content-end">
                           <div class="col-2">
                               <%= link_to '詳細', admin_user_path(user), class: "btn btn-primary" %>
                           </div>
                       </div>   
                      </div>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
</div>