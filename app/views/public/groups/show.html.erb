<h1>Public::Groups#show</h1>
<div class="container">
    <div class="row">
        <div class="col">
           <table class= "table">
                <thead>
                  <tr>
                    <td></td>
                    <th>グループ名</th>
                    <th>紹介文</th>
                    <th>メンバー</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td></td>    
                    <td><%= @group.name %></td>
                    <td><%= @group.introduction %></td>
                    <td>
                      <% @group.users.each do |member| %>
                        <%= member.name %><br>
                      <% end %>
                    </td>
                    <% if @group.owner_id == current_user.id %>
                    <td><%= link_to 'Edit', edit_public_group_path(@group), class: "btn btn-sm btn-outline-success" %></td>
                    <td>
                        <%= link_to 'グループ削除',public_group_all_destroy_path(@group),
                        method: :delete,data: { confirm: '本当に削除しますか？' } ,
                        class: "btn btn-sm btn-outline-danger" %>
                    </td>
                    <% elsif @group.users.include?(current_user) %>
                    <td><%= link_to 'Leave this group', public_group_path(@group), method: :delete, class: "btn btn-sm btn-danger" %></td>
                    <% else %>
                    <td><%= link_to 'Join this group', public_group_join_path(@group), class: "btn btn-sm btn-success" %></td>
                    <% end %>
                    <td><%= link_to 'チャットを始める', public_group_group_messages_path(@group), class: "btn btn-outline-info" %></td>
                  </tr>
                </tbody>
           </table>
           
            <div>
                <%= link_to '一覧へ', public_groups_path %>
            </div>
        </div>
    </div>
</div>
