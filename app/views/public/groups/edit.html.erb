<div class="container">
    <h2 class="text-center mt-5">グループ編集</h2>
    <div class="row justify-content-center">
        <div class="col-5">
            <%= form_with model: @group, url: public_group_path, method: :patch do |f| %>
                <div class="form-group">
                    <%= f.label :name, 'グループ名' %></br>
                    <%= f.text_field :name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :introduction, 'グループ紹介' %></br>
                    <%= f.text_area :introduction, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :profile_image, 'グループ画像' %>
                    <%= f.file_field :profile_image, accept: "image/*" %>
                </div>
                <div class="form-group">
                    <%= f.submit '編集OK', class: "btn btn-outline-success" %>
                </div>
            <% end %>
        </div>
           
    </div>
</div>

