<div class="container mb-5 page-height">
    <div class="row">
        <div class="col">
            <div id="admin-user-scroll">
                <% @posts.each do |post| %>
                    <div class="card bg-transparent mt-3">
                      <h5 class="card-header"><%= post.title %></h5>
                      <div class="card-body">
                        <p class="card-text"><%= post.user.name %></p>
                        <p class="card-text"><%= post.body %></p>
                        <p class="card-text"><%= post.created_at %></p>
                       <div class="row justify-content-end">
                           <div class="col-2">
                               <%= link_to '詳細', admin_post_path(post), class: "btn btn-primary" %>
                           </div>
                       </div>   
                      </div>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
</div>
