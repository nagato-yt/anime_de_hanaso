                <div class="scroll">
                    <%= render 'public/groups/group_index', groups: @groups %>
                </div>
            </div>
        </div>
        <div class= " col-lg-2 justify-content-center d-none d-lg-block mt-5">
            <div class="visible-lg sidebar_fixed">
                <div  onselectstart="return false;" onmousedown="return false;"><%= image_tag 'egao' %></div>
                <div  onselectstart="return false;" onmousedown="return false;"><%= image_tag 'yobikake'%></div>
                <div  onselectstart="return false;" onmousedown="return false;"><%= image_tag 'niko' %></div>
