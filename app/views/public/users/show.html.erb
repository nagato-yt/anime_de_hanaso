<h1>Public::Users#show</h1>

<div class="container">
    <div class="row">
        <div class="col-3 ">
            <div>
                <%= @user.name %>
                <%= @user.email %>
                <%= @user.followers.count %>
            </div>
            <div>
                <% if current_user.following?(@user) %>
                  <%= link_to "フォロー外す", public_user_relationships_path(@user.id), method: :delete %>
                <% else %>
                  <%= link_to "フォローする", public_user_relationships_path(@user.id), method: :post %>
                <% end %>
            </div>
            <div>
                <%= link_to '投稿へ', public_posts_path, class: "btn btn-success" %>
            </div>
            <div>
                <%= link_to 'いいね一覧',favorites_public_user_path, class: "btn btn-info" %>
            </div>
        </div>
    </div>
</div>

