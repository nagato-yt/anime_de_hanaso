<% if current_user != user %>
  <% if user!= User.guest %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", public_user_unfollow_path(user.id), method: :delete, class: "btn btn-outline-info",remote: true %>
    <% else %>
      <%= link_to "フォローする", public_user_follow_path(user.id), method: :post, class: "btn btn-outline-success",remote: true %>
    <% end %>
  <% end %>
<% end %>